<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="650.0" prefWidth="500.0" style="-fx-background-color: E0E0E0;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Login.AskCredAndEmailController">
    <children>
        <ImageView fitHeight="164.0" fitWidth="161.0" layoutX="170.0" layoutY="2.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../../assets/SkyTrade-logos_black.png"/>
            </image>
        </ImageView>
        <Text layoutX="96.0" layoutY="245.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
            <font>
                <Font size="20.0"/>
            </font>
        </Text>
        <Text layoutX="97.0" layoutY="399.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
            <font>
                <Font size="20.0"/>
            </font>
        </Text>
        <TextField fx:id="username" layoutX="96.0" layoutY="251.0" prefHeight="25.0" prefWidth="308.0"
                   promptText="No more than 16 characters"/>
        <TextField fx:id="password" layoutX="96.0" layoutY="404.0" prefHeight="25.0" prefWidth="308.0"
                   promptText="More than 8 characters, less than 32"/>
        <TextField fx:id="confirmPassword" layoutX="97.0" layoutY="459.0" prefHeight="25.0" prefWidth="308.0"
                   promptText="Re-enter Password"/>
        <Text layoutX="96.0" layoutY="321.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email address">
            <font>
                <Font size="20.0"/>
            </font>
        </Text>
        <TextField fx:id="email" layoutX="96.0" layoutY="326.0" prefHeight="25.0" prefWidth="308.0"/>
        <Button layoutX="183.0" layoutY="540.0" mnemonicParsing="false" onAction="#ContinueCredentialsClick"
                prefHeight="52.0" prefWidth="135.0" style="-fx-background-color: rgb(245,117,106);" text="Continue">
            <font>
                <Font size="22.0"/>
            </font>
        </Button>
        <Text fx:id="usernameError" fill="RED" layoutX="97.0" layoutY="291.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Text>
        <Text fx:id="confirmPasswordError" fill="RED" layoutX="97.0" layoutY="499.0" strokeType="OUTSIDE"
              strokeWidth="0.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Text>
        <Text fx:id="emailError" fill="RED" layoutX="97.0" layoutY="366.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Text>
        <Text fx:id="passwordError" fill="RED" layoutX="97.0" layoutY="444.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Text>
        <Text layoutX="130.0" layoutY="188.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Let's get started!">
            <font>
                <Font name="Cambria" size="34.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
