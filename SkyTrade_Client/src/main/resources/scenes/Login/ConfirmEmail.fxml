<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="650.0" prefWidth="500.0" style="-fx-background-color: E0E0E0;"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Login.ConfirmEmailController">
    <children>
        <ImageView fitHeight="164.0" fitWidth="161.0" layoutX="170.0" layoutY="2.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../../assets/SkyTrade-logos_black.png"/>
            </image>
        </ImageView>
        <Text layoutX="121.0" layoutY="188.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email Verification">
            <font>
                <Font name="Cambria" size="34.0"/>
            </font>
        </Text>
        <Button layoutX="166.0" layoutY="540.0" mnemonicParsing="false" onAction="#VerifyEmailClick" prefHeight="52.0"
                prefWidth="168.0" style="-fx-background-color: rgb(245,117,106);" text="Verify Email">
            <font>
                <Font size="22.0"/>
            </font>
        </Button>
        <Text fx:id="confirmEmailText" layoutX="50.0" layoutY="276.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="To verify your email, we've sent a One Time Password (OTP) to" textAlignment="CENTER"
              wrappingWidth="400.0">
            <font>
                <Font name="Calibri" size="27.0"/>
            </font>
        </Text>
        <TextField fx:id="UserOTP" layoutX="82.0" layoutY="427.0" prefHeight="41.0" prefWidth="338.0"/>
        <Text layoutX="82.0" layoutY="421.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter OTP">
            <font>
                <Font name="System Bold" size="23.0"/>
            </font>
        </Text>
        <Text fx:id="UserOTPError" fill="RED" layoutX="82.0" layoutY="491.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font size="17.0"/>
            </font>
        </Text>
    </children>
</AnchorPane>
